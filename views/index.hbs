        <div class="form-group">
            <label for="inputBranch">Branch</label>
            <select id="inputBranch" class="form-control" name="branch">
                <option value="" selected>Select Branch...</option>
                {{#each uniqueValues.branch}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="inputProduct">Product</label>
            <select id="inputProduct" class="form-control" name="product">
                <option value="" selected>Select Product...</option>
                {{#each uniqueValues.product}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div id="resultTable" class="mt-5">
        <!-- Table will be displayed here upon submission -->
        <div id="resultTable" class="mt-5">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NAME</th>
                <th scope="col">CIF ID</th>
                <th scope="col">AMOUNT</th>
                <th scope="col">EMI</th>
                <th scope="col">CALL</th>
                <th scope="col">WHATSAPP</th>
               
                <!-- ... (other headers) ... -->
            </tr>
        </thead>
        <tbody>
            {{#each filteredData}}
                <tr>
                    <td>{{this.customer_name}}</td>
                    <td>{{this.customer_cif}}</td>
                    <td>{{this.amount}}</td>
                    <td>{{this.emi}}</td>
                    <td>
    <a href="tel:{{this.customer_phone}}">
        <i class="fas fa-phone"></i> 
    </a>
</td>

                   <td>
