                <input type="file" class="form-control-file" id="inputFile" name="excelFile">
            </div>
            <div class="form-row">
                <!-- ... (rest of the dropdowns) ... -->
            </div>
            <button type="submit" class="btn btn-primary">Load Data</button>
        </form>
    </div>
    <div class="container mt-5">
    {{!-- <h1>{{ title }}</h1> --}}
    <form action="/submit" method="POST">
